<!DOCTYPE html>
<html>
<head>
  <title>CityRovr</title>
  <%= stylesheet_link_tag '//yui.yahooapis.com/pure/0.5.0/pure-min.css' %>
  <%= stylesheet_link_tag '//yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>

  <%= javascript_include_tag 'application' %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body ng-app="App">
  <%= render 'layouts/nav_bar' %>
  <%= render 'layouts/flash_messages' %>

  <div ng-view>
    <%# Placeholder for Angular templates %>
  </div>

  <%= render 'layouts/footer' %>

  <%# Set currently signed in user details, if any %>
  <script type="application/javascript">
    <% if @current_user_json %>
    var CurrentUser = <%= raw @current_user_json %>;
    <% else %>
    var CurrentUser = null;
    <% end %>
  </script>
</body>
</html>
